<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/head_sum_of_loan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сумма займа: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/loan_info_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/head_sum_of_loan"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/head_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Период:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_sum_of_loan"/>

    <TextView
        android:id="@+id/loan_info_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/head_percent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/head_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Процентная ставка:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_percent"/>

    <TextView
        android:id="@+id/loan_info_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/head_period"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/head_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заемщик:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_period"/>

    <TextView
        android:id="@+id/loan_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/head_info_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/head_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_info_name"/>

    <TextView
        android:id="@+id/loan_info_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/head_status"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>