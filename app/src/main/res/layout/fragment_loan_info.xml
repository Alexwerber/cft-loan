<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/head_sum_of_loan"
        style="@style/loan_info_text"
        android:text="@string/head_sum_of_loan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/loan_info_amount"
        style="@style/loan_info_text"
        app:layout_constraintBaseline_toBaselineOf="@id/head_sum_of_loan"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/head_percent"
        style="@style/loan_info_text"
        android:text="@string/head_percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_sum_of_loan"/>

    <TextView
        android:id="@+id/loan_info_percent"
        style="@style/loan_info_text"
        app:layout_constraintBaseline_toBaselineOf="@id/head_percent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/head_period"
        style="@style/loan_info_text"
        android:text="@string/head_period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_percent"/>

    <TextView
        android:id="@+id/loan_info_period"
        style="@style/loan_info_text"
        app:layout_constraintBaseline_toBaselineOf="@id/head_period"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/head_info_name"
        style="@style/loan_info_text"
        android:text="@string/head_info_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_period"/>

    <TextView
        android:id="@+id/loan_info_name"
        style="@style/loan_info_text"
        app:layout_constraintBaseline_toBaselineOf="@id/head_info_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/head_status"
        style="@style/loan_info_text"
        android:text="@string/head_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_info_name"/>

    <TextView
        android:id="@+id/loan_info_status"
        style="@style/loan_info_text"
        app:layout_constraintBaseline_toBaselineOf="@id/head_status"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:hint="@string/head_adress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_status"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>